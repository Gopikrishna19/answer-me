<UserControl x:Class="GameOverMsg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#c0B8B8B8" MouseDown="UserControl_MouseDown">
    <Grid>
    	<TextBlock HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="Game Over" VerticalAlignment="Center" FontFamily="Mishmash BRK" FontSize="96">
    		<TextBlock.Effect>
    			<DropShadowEffect Color="#FFA97878" BlurRadius="10"/>
    		</TextBlock.Effect>
    	</TextBlock>
    	<TextBlock Margin="0,0,0,126.796" TextWrapping="Wrap" Text="Click to Replay . . ." VerticalAlignment="Bottom" FontSize="32" d:LayoutOverrides="Width" HorizontalAlignment="Center"/>
            
    </Grid>
</UserControl>
